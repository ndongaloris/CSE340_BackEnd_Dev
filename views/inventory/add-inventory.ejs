<% if (title){ %>
    <h1><%= title %></h1>
    <% }else{
    res.redirect("/")
    }%>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
<li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>


<form action="/inv/add-inventory"  method="post" id="vehicleForm">
    <%- selectList %>
    <label>Make<input type="text" name="inv_make" value="<%- inv_make %>" required></label>
    <label>Model<input type="text" name="inv_model" value="<%- inv_model %>" required></label>
    <label>Description<textarea type="text" name="inv_description" required><%- inv_description %></textarea></label>
    <label>Image Path<input type="text" name="inv_image" value="/images/vehicles/no-image.png" required></label>
    <label>Thumbnail Path<input type="text" name="inv_thumbnail" value="/images/vehicles/no-image.png" required></label>
    <label>Price<input type="number" pattern="^[0-9]*\.?[0-9]+$" name="inv_price" placeholder="decimal or integer" value="<%- inv_price %>" required></label>
    <label>Year<input type="number" pattern="^\d{4}$" name="inv_year" placeholder="4-digit year" value="<%- inv_year %>" required></label>
    <label>Miles<input type="number" pattern="^\d+$" name="inv_miles" placeholder="digits only" value="<%- inv_miles %>"  required></label>
    <label>Color<input type="text" name="inv_color" value="<%- inv_color %>" required></label>
    <button type="submit">Add Vehicle</button>
</form>