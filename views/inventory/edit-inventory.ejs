<% if (title){ %>
    <h1><%= title %></h1>
    <% }else{
    res.redirect("/")
    }%>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
<li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>



<form action="/inv/update" method="post" id="vehicleForm">
    <%- selectList %>
    <label>Make<input type="text" name="inv_make" value="<%- inv_make %>"></label>
    <label>Model<input type="text" name="inv_model"   value="<%- inv_model %>"></label>
    <label>Description<textarea type="text" name="inv_description"  value="<%- inv_description  %>"></textarea></label>
    <label>Image Path<input type="text" name="inv_image" value="/images/vehicles/no-image.png"  value="<%- inv_image  %>"></label>
    <label>Thumbnail Path<input type="text" name="inv_thumbnail" value="/images/vehicles/no-image.png"  value="<%- inv_thumbnail  %>"></label>
    <label>Price<input type="decimal" pattern="^[0-9]*.?[0-9]+$" name="inv_price" placeholder="decimal or integer"  value="<%- inv_price  %>"></label>
    <label>Year<input type="number" pattern="^d{4}$" name="inv_year" placeholder="4-digit year"  value="<%- inv_year  %>"></label>
    <label>Miles<input type="number" pattern="^d+$" name="inv_miles" placeholder="digits only"  value="<%- inv_miles  %>"></label>
    <label>Color<input type="text" name="inv_color" value="<%- inv_color %>"></label>
    <button type="submit">Update Vehicle</button>
</form>